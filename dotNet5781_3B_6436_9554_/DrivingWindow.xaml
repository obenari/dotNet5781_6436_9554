<Window x:Class="dotNet5781_3B_6436_9554_.DrivingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_3B_6436_9554_"
        mc:Ignorable="d"
        Title="DrivingWindow" Height="280" Width="300" Icon="icon.png">
    <Grid>
        <Grid.Background>
            <ImageBrush Opacity="0.27" ImageSource="drivingBus.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Enter the travel distance:" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="DarkGreen"/>
        <TextBox x:Name="tbKm" HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap"   VerticalAlignment="Center" Width="140" PreviewKeyDown="textOnlyNumber" KeyUp="TextBox_KeyUp"/>
        <Label x:Name="labelContinue" Content="press enter to continue" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Visibility="Hidden"/>

    </Grid>
</Window>
