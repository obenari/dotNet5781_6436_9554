                <ListView.View >
                    <GridView x:Name="lineGridview">
                        <GridViewColumn Header="זמן נסיעה משוער מתחנה קודמת" Width="165" DisplayMemberBinding="{Binding Time}" FrameworkElement.FlowDirection="RightToLeft"   />
